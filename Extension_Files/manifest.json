{
	"manifest_version": 2,
	"name": "SCP Wiki Tools",
	"short_name": "SCP Tools",
	"version": "1.0.6",

	"description": "Links together various userscripts for the SCP Foundation website",
	"icons": {
		"16": "SmallLogo.gif",
		"100": "LargeLogo.png",
		"128": "128Logo.png"
	},

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_popup": "selector.html"
	},
	"permissions": [
		"tabs",
		"storage",
		"webNavigation",
		"http://www.scp-wiki.net/",
		"http://scp-wiki.wikidot.com/",
		"http://05command.wikidot.com/senior-staff-list-teams",
		"http://ferryfm13.thirteen.axc.nl/scp/misc/",
		"http://sandboxcrayne.wikidot.com/author-stats"
	]
}
